<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ss.isc.data.baseinfo.mapper.EnumMapper">
  	
  	<resultMap id="BaseResultMap" type="com.ss.isc.data.baseinfo.common.model.BaseEnums" >
    <result column="enumType" property="enumType" jdbcType="VARCHAR" />
    <result column="enumName" property="enumName" jdbcType="VARCHAR" />
    <result column="enumValue" property="enumValue" jdbcType="INTEGER" />
    <result column="enumDesc" property="enumDesc" jdbcType="VARCHAR" />
  	</resultMap>
  
	 <sql id="Base_Column_List" >
	    enumType, enumName, enumValue, enumDesc
   </sql>

   <select id="findList" resultMap="BaseResultMap" parameterType="com.ss.isc.data.baseinfo.common.model.BaseEnums" >
		SELECT
	   	<include refid="Base_Column_List" />
	  	FROM cw_base_enum
	 	<where>
			<if test="enumType != null and enumType != ''">
				enumType = #{enumType}
		 	</if>
	 	</where>
      	ORDER BY enumValue
   </select>

</mapper>