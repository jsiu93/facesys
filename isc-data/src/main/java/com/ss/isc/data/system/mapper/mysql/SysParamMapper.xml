<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ss.isc.data.system.mapper.SysParamMapper">
	<select id="queryByFilter" parameterType="com.ss.isc.data.system.common.model.SysParam"
		resultType="com.ss.isc.data.system.common.model.SysParam">
		SELECT
		ID, PARAMID, PARAMKEY, PARAMVALUE, REMARK, TYPE
		FROM
		TBL_ISS_SYS_PARAM_INFO
		<where>
			<if test="type != null">
				type = #{type}
			</if>
			<if test="paramKey != null">
				and PARAMKEY = #{paramKey}
			</if>
		</where>
	</select>
	<update id="batchModSysParam" parameterType="java.util.List">
		<foreach collection="list" item="item" separator=";">
			update
			TBL_ISS_SYS_PARAM_INFO
			<set>
				PARAMVALUE = #{item.paramValue}
			</set>
			where PARAMKEY = #{item.paramKey}
		</foreach>
	</update>
	
	<insert id="addSysParam" parameterType="com.ss.isc.data.system.mapper.SysParamMapper">
		INSERT INTO TBL_ISS_SYS_PARAM_INFO(PARAMID) VALUES (#{paramID})
	</insert>
</mapper>